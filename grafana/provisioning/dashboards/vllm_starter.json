{
"title": "vLLM Starter",
"schemaVersion": 38,
"version": 1,
"panels": [
{
"type": "timeseries",
"title": "GPU Utilization",
"targets": [{"expr": "DCGM_FI_DEV_GPU_UTIL"}]
},
{
"type": "timeseries",
"title": "GPU Memory Used (MiB)",
"targets": [{"expr": "DCGM_FI_DEV_FB_USED"}]
},
{
"type": "timeseries",
"title": "Node CPU %",
"targets": [{"expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)"}]
},
{
"type": "timeseries",
"title": "Container CPU (cAdvisor)",
"targets": [{"expr": "sum by(container_label_com_docker_compose_service) (rate(container_cpu_usage_seconds_total[5m]))"}]
},
{
"type": "timeseries",
"title": "vLLM: Inâ€‘flight Requests",
"targets": [{"expr": "sum(vllm_num_requests_running)"}],
"transparent": false
},
{
"type": "timeseries",
"title": "vLLM: Waiting Requests",
"targets": [{"expr": "sum(vllm_num_requests_waiting)"}]
},
{
"type": "timeseries",
"title": "vLLM: Tokens/sec (decode)",
"targets": [{"expr": "sum(rate(vllm_tokens_decoded_total[1m]))"}]
},
{
"type": "timeseries",
"title": "vLLM: TTFT (ms)",
"targets": [{"expr": "histogram_quantile(0.5, sum(rate(vllm_time_to_first_token_ms_bucket[5m])) by (le))"}]
}
]
}
